{
    "name": "my-vue-app-ts",
    "version": "0.0.0",
    "scripts": {
        "dev": "vite",
        "build": "vuedx-typecheck . && vite build",
        "serve": "vite preview",
        "lint": "vuedx-typecheck .",
        "prepare": "[ -d '.husky' ] &&  echo '' || (pnpx husky install && pnpx husky add .husky/commit-msg 'pnpx commitlint --edit $1')",
        "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
    },
    "dependencies": {
        "ahooks-vue": "^0.10.2",
        "ant-design-vue": "^1.7.4",
        "lodash": "^4.17.21",
        "tailwindcss": "^2.0.3",
        "vue": "^3.0.5",
        "vue-router": "^4.0.5",
        "vue-use-gesture": "^1.0.1",
        "vue3-reactive-store": "^0.2.1",
        "vuex": "^4.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.0.1",
        "@commitlint/config-conventional": "^12.0.1",
        "@types/node": "^14.14.35",
        "@vitejs/plugin-vue": "^1.1.4",
        "@vitejs/plugin-vue-jsx": "^1.1.2",
        "@vue/compiler-sfc": "^3.0.5",
        "@vuedx/typecheck": "^0.6.0",
        "@vuedx/typescript-plugin-vue": "^0.6.0",
        "autoprefixer": "^10.2.5",
        "conventional-changelog": "^3.1.24",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^5.1.3",
        "less": "^4.1.1",
        "lint-staged": "^10.5.4",
        "postcss": "^8.2.8",
        "postcss-import": "^14.0.0",
        "prettier": "^2.2.1",
        "typescript": "^4.1.3",
        "vite": "^2.0.0",
        "vite-plugin-pages": "^0.7.2",
        "vite-plugin-style-import": "^0.8.1"
    },
    "lint-staged": {
        "*.js": "pnpx lint",
        "*.{js,css,md}": "prettier --write"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
